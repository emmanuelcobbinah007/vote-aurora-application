// This is the University database schema file
// Contains minimal schema needed for integration

generator university_client {
  provider = "prisma-client-js"
  output   = "../src/generated/university-prisma"
}

datasource university_db {
  provider = "postgresql"
  url      = env("UNIVERSITY_DATABASE_URL")
}

model departments {
  id          Int     @id @default(autoincrement())
  name        String
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now()) @updatedAt
  is_active   Boolean  @default(true)

  students    students[]
}

model students {
  id            Int     @id @default(autoincrement())
  student_id    String  @unique // University student ID
  email         String  @unique
  name          String
  department_id Int
  is_active     Boolean @default(true)
  created_at    DateTime @default(now())
  updated_at    DateTime @default(now()) @updatedAt

  department    departments @relation(fields: [department_id], references: [id])

  @@map("students")
}