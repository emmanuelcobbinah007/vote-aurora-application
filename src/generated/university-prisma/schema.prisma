generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/university-prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("UNIVERSITY_DATABASE_URL")
}

model departments {
  id       Int        @id @default(autoincrement())
  name     String     @db.VarChar(100)
  students students[]
}

model students {
  id            Int          @id @default(autoincrement())
  student_id    String       @unique @db.VarChar(50)
  name          String       @db.VarChar(100)
  email         String       @unique @db.VarChar(100)
  department_id Int?
  departments   departments? @relation(fields: [department_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
